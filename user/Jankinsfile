pipeline {
    agent any
    environment {
        DOCKER = 'sudo docker'
        BRANCH_NAME = "${env.BRANCH_NAME}"
    }

    stages {
        stage('Clone Repository') {
            steps {
                checkout scm
                echo 'Checkout Scm'
            }
        }

        stage('Build image') {
            steps {
                sh 'ls -al'
                dir('.') {
                    sh 'ls -al'
                    sh 'chmod +x ./gradlew'
                    sh './gradlew build'
                    sh 'docker login -u godseye93 -p djajsl641105'
                    sh 'docker build -t godseye93/user:${BRANCH_NAME} .'
                }
                echo 'Build image...'
            }
        }

        stage('Remove Previous image') {
            steps {
                script {
                    try {
                        sh 'docker stop user:${BRANCH_NAME}'
                        sh 'docker rm user:${BRANCH_NAME}'
                    } catch (e) {
                        echo 'fail to stop and remove container'
                    }
                }
            }
        }
        stage('Run New image') {
            steps {
                sh 'docker run --name user:${BRANCH_NAME} -d -p 8081:8081 godseye93/user:${BRANCH_NAME}'
                echo 'Run New member image'
            }
        }
    }
}